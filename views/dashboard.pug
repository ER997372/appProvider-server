extends layout

block content
  .container
    .row
      .col-md-12
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
          a.navbar-brand(href='#') Dashboard
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav.mr-auto
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href='/users/logout') Logout
    .row.mt-4
      .col-md-12.d-flex.justify-content-between.align-items-center
        h2 Applications
        a.btn.btn-primary(href='/applications/create') Upload New App
    .row
      .col-md-12
        table.table.table-striped
          thead
            tr
              th Name
              th Package Name
              th Version
              th Uploaded By
              th Uploaded At
          tbody
            each application in applications
              tr
                td= application.name
                td= application.packageName
                td= application.version
                td= application.uploadedBy
                td= new Date(application.createdAt).toLocaleString()
